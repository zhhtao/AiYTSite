<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
    
	<TextView
	    android:id="@+id/order_wei_fa_huo_canle_order_input_reason_textView" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="#483d8b"
	    android:text="请输入取消原因："/>
	
	<EditText
	    android:id="@+id/order_wei_fa_huo_canle_order_input_reason" 
	    android:layout_marginTop="8dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top|left"
	    android:minLines="4"
	    android:maxLines="6"
	    android:background="#fff"
	    android:textSize="16sp"
	    android:hint="输入原因"
	    />
	
	<!-- 按钮行 -->
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        
	    <Button
            android:id="@+id/order_wei_fa_huo_canle_order_ok_btn" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="#fff"
            android:background="@drawable/btn_green"/>
        
        <View 
            android:layout_width="15dp"
            android:layout_height="fill_parent"/>
        <Button
            android:id="@+id/order_wei_fa_huo_canle_order_cancle_btn" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#fff"
            android:background="@drawable/btn_orange"/>
	</LinearLayout>
	
</LinearLayout>
