<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存：" />

        <EditText
            android:id="@+id/stock_classify_level2_change_info_stock_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="输入新值" />
        
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格：" />

        <EditText
            android:id="@+id/stock_classify_level2_change_info_price_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="输入新值" />
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/stock_classify_level2_change_info_ok_btn" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="#fff"
            android:background="@drawable/btn_green"/>
        
        <View 
            android:layout_width="15dp"
            android:layout_height="fill_parent"/>
        <Button
            android:id="@+id/stock_classify_level2_change_info_cancle_btn" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#fff"
            android:background="@drawable/btn_orange"/>
    </LinearLayout>

</LinearLayout>
