<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="#483d8b"
	    android:text="快递公司："/>
	
	<Spinner
	    android:id="@+id/order_wei_fa_huo_deliver_goods_input_company" 
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    />
    </LinearLayout>
    
    <EditText
        android:id="@+id/order_wei_fa_huo_deliver_goods_input_company_other"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入快递公司"
        android:visibility="gone"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="#483d8b"
	    android:text="运单号码："/>
	
	<EditText
	    android:id="@+id/order_wei_fa_huo_deliver_goods_input_seq" 
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:minLines="1"
	    android:maxLines="2"
	    android:textSize="16sp"
	    android:hint=""
	    />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="#483d8b"
	    android:text="发货时间："/>
	
	<EditText
	    android:id="@+id/order_wei_fa_huo_deliver_goods_input_time" 
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:minLines="1"
	    android:maxLines="2"
	    android:textSize="16sp"
	    android:focusable="false"
	    android:hint=""
	    />
    </LinearLayout>
	
	<!-- 按钮行 -->
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        
	    <Button
            android:id="@+id/order_wei_fa_huo_deliver_goods_ok_btn" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="#fff"
            android:background="@drawable/btn_green"/>
        
        <View 
            android:layout_width="15dp"
            android:layout_height="fill_parent"/>
        <Button
            android:id="@+id/order_wei_fa_huo_deliver_goods_cancle_btn" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#fff"
            android:background="@drawable/btn_orange"/>
	</LinearLayout>
	

</LinearLayout>
