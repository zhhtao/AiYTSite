<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    
    <LinearLayout 
            android:background="@color/white" 
            android:layout_width="fill_parent" 
            android:layout_height="50.0dip">
            
            <ImageView 
                android:background="@drawable/logo_test_color" 
                android:layout_width="220.0dip" 
                android:layout_height="33.0dip" 
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"  
                android:contentDescription="@string/image_desc" />
            
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                />
     </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/list_bg_normal">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:paddingLeft="10dp"
            android:layout_height="45dp">
            
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black3_text_color"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="注册邮箱:"/>
            <EditText 
                android:id="@+id/et_register_email"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:hint="@string/register_email_hint" 
                style="@style/login_edit"/>
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/spliter"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:paddingLeft="10dp"
            android:layout_height="45dp">
            
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black3_text_color"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="用户名:"/>
            <EditText 
                android:id="@+id/et_register_username"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:hint="@string/register_name_hint" 
                style="@style/login_edit"/>
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/spliter"/>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:paddingLeft="10dp"
            android:layout_height="45dp">
            
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black3_text_color"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="密码:"/>
            <EditText
                android:id="@+id/et_register_password" 
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:hint="@string/register_password_hint" 
                android:password="true"
                style="@style/login_edit"/>
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/spliter"/>
       
       <LinearLayout 
            android:layout_width="fill_parent"
            android:paddingLeft="10dp"
            android:layout_height="45dp">
            
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black3_text_color"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="确认密码:"/>
            <EditText 
                android:id="@+id/et_register_password_two"
                android:password="true"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:hint="@string/register_pw_ack_hint" 
                style="@style/login_edit"/>
        </LinearLayout>
    </LinearLayout>
	
    <Button 
        android:id="@+id/btn_reister_commit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="提交注册"/>
    
</LinearLayout>
