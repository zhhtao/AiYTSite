<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_item_whole_click"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/order_tui_huo_zhong_item_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_top"
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="订单号:"
                android:textColor="@color/black"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/order_tui_huo_zhong_list_item_seq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="bj150344548457411"
                android:textColor="@color/navigate_bar_selected_text"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/order_tui_huo_zhong_list_item_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态：未发货"
                android:textColor="#191970"
                android:visibility="gone"
                android:textSize="14.0sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/line_dot" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:paddingBottom="10.0dip"
            android:paddingLeft="9.5dip"
            android:paddingTop="10.0dip" >

            <FrameLayout
                android:id="@+id/order_tui_huo_zhong_item_image_layout"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle"
                android:padding="0.5dip" >

                <ImageView
                    android:id="@+id/order_tui_huo_zhong_list_item_goods_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image_desc"
                    android:src="@drawable/muji"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <ImageView
                android:id="@+id/order_tui_huo_zhong_list_item_arrow_detail"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10.0dip"
                android:paddingLeft="20dp"
                android:contentDescription="@string/image_desc"
                android:src="@drawable/arrow_right" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@+id/order_tui_huo_zhong_list_item_arrow_detail"
                android:layout_toRightOf="@+id/order_tui_huo_zhong_item_image_layout"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="5.0dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_tui_huo_zhong_list_item_goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="2.0dip"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="老母鸡"
                        android:textColor="#ffa500"
                        android:textSize="16.0sp" />
                    
                    <TextView
                        android:id="@+id/order_tui_huo_zhong_list_item_goods_attri" 
                        android:layout_marginLeft="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="属性"/>
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_item_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/product_item_price_name"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="5.0dip"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="单价:"
                            android:textColor="@color/red_text_color"
                            android:textSize="12.0sp" />

                        <TextView
                            android:id="@+id/order_tui_huo_zhong_list_item_price_value"
                            android:layout_width="60.0dip"
                            android:layout_height="fill_parent"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="89.8"
                            android:textColor="@color/red_text_color"
                            android:textSize="12.0sp" />

                        <TextView
                            android:id="@+id/product_item_count_name"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="5.0dip"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="数量:"
                            android:textColor="@color/black"
                            android:textSize="12.0sp" />

                        <TextView
                            android:id="@+id/order_tui_huo_zhong_list_item_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textSize="12.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/line_dot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="5.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5.0dip" >

            <TextView
                android:id="@+id/order_tui_huo_zhong_list_item_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单日期：2015-6-15 17:46"
                android:textSize="13sp"
                android:textColor="#00bfff"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/order_tui_huo_zhong_list_item_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="实付:￥82.0"
                android:textColor="@color/red_text_color" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/line_dot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10.0dip"
            android:paddingTop="8.0dip"
            android:paddingBottom="3dp" >

            

            <Button
                android:id="@+id/order_tui_huo_zhong_list_item_qurey_logicstics_btn"
                android:layout_width="81.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/btn_orange"
                android:text="退款"
                android:textColor="@color/white"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@drawable/cart_bottom"
        android:contentDescription="@string/image_desc"
        android:scaleType="fitXY"
        android:visibility="visible"
        />

</LinearLayout>