<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 标题 -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fa7644">
    <TextView 
        android:id="@+id/stock_classify_level2_simple_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细信息"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="#fff"
        />

    <ImageView 
        android:id="@+id/stock_classify_level2_simple_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shake_back_normal"
        android:layout_centerVertical="true"
        android:paddingRight="50dp"
        android:layout_marginLeft="5dp"
        
        />
    </RelativeLayout>
    
    <!-- 加载进度条 -->
    <RelativeLayout 
        android:id="@+id/stock_classify_level2_simple_progressBar_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        >
        <ProgressBar 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleLarge"
            />
    </RelativeLayout>
    
    <!-- 商品信息 -->
    <LinearLayout 
        android:id="@+id/stock_classify_level2_simple_show_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bg_normal"
        android:orientation="vertical"
        >
        <!-- 商品名 标题栏 -->
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            
            <TextView 
                android:id="@+id/stock_classify_level2_simple_goodsName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="母鸡0"
                android:textColor="#FF7800"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerVertical="true"/>
            
            <Button 
                android:id="@+id/stock_classify_level2_simple_chang_stock"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/btn_orange"
                android:text="修改库存量"
                android:textColor="#fff"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_alignParentRight="true"/>
            
            
            
        </RelativeLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spliter"/>
        
        <ListView 
            android:id="@+id/stock_classify_level2_simple_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
			android:touchscreenBlocksFocus="false"
			android:listSelector="#0000"
            >
            
        </ListView>
        
    </LinearLayout> 
    

</LinearLayout>
